[
  {
    "name": "postgres",
    "image": "postgres:17.2",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 5432,
        "hostPort": 5432,
        "protocol": "tcp"
      }
    ],
    "environment": [
      { "name": "POSTGRES_USER", "value": "inff" },
      { "name": "POSTGRES_PASSWORD", "value": "123321aab@" },
      { "name": "POSTGRES_DB", "value": "InnovateFuture" }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "PGPASSWORD=123321aab@ psql -U inff -h localhost -p 5432 -d InnovateFuture -c 'SELECT 1'"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 10
    }
  },
  {
    "name": "migration",
    "image": "${backend_base_repo}:latest",
    "essential": false,
    "command": [
      "dotnet",
      "ef",
      "database",
      "update",
      "--project",
      "src/InnovateFuture.Infrastructure/InnovateFuture.Infrastructure.csproj",
      "--startup-project",
      "src/InnovateFuture.Api/InnovateFuture.Api.csproj",
      "--configuration",
      "Release",
      "--no-build"
    ],
    "dependsOn": [
      {
        "containerName": "postgres",
        "condition": "HEALTHY"
      }
    ],
    "environment": [
      {
        "name": "DBConnection",
        "value": "Host=localhost;Port=5432;Database=InnovateFuture;Username=inff;Password=123321aab@;"
      },
      { "name": "JWTConfig__SecretKey", "value": "123" },
      { "name": "ASPNETCORE_ENVIRONMENT", "value": "${dep_env}" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${logs_group}",
        "awslogs-region": "${logs_region}",
        "awslogs-stream-prefix": "migration"
      }
    }
  },
  {
    "name": "api",
    "image": "${backend_publish_repo}:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 5091,
        "hostPort": 5091,
        "protocol": "tcp"
      }
    ],
    "environment": [
      { "name": "DBConnection", "value": "Host=localhost;Port=5432;Database=InnovateFuture;Username=inff;Password=123321aab@;" },
      { "name": "FrontEndBaseUrl", "value": "${frontend_base}" },
      { "name": "JWTConfig__Issuer", "value": "innovateFuture Support" },
      { "name": "JWTConfig__Audience", "value": "innovateFuture" },
      { "name": "JWTConfig__ExpireSeconds", "value": "7200" },
      { "name": "JWTConfig__Domain", "value": "${cookie_domain}" },
      { "name": "EmailSettings__SmtpServer", "value": "smtp.gmail.com" },
      { "name": "EmailSettings__SmtpPort", "value": "587" },
      { "name": "EmailSettings__SenderName", "value": "Innovate-feature" },
      { "name": "AWS__BucketName", "value": "inff-dev-upload-test-bkt" },
      { "name": "AWS__Region", "value": "ap-southeast-2" },
      { "name": "ASPNETCORE_ENVIRONMENT", "value": "${dep_env}" }
    ],
    "secrets": [
      { "name": "JWTConfig__SecretKey", "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:${secret_account}:secret:INFF_JWT_SECRET-WNEJ02" },
      { "name": "EmailSettings__SenderEmail", "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:${secret_account}:secret:INFF_SENDER_EMAIL-DzPRnT" },
      { "name": "EmailSettings__SenderPassword", "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:${secret_account}:secret:INFF_SENDER_PASS-NPx6Pl" },
      { "name": "AWS__AccessKey", "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:${secret_account}:secret:INFF_BUCKET_KEY-eOI8Kf" },
      { "name": "AWS__SecretKey", "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:${secret_account}:secret:INFF_BUCKET_SECRET-XbOvCw" }
    ],
    "dependsOn": [
      {
        "containerName": "migration",
        "condition": "SUCCESS"
      },
      {
        "containerName": "postgres",
        "condition": "HEALTHY"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${logs_group}",
        "awslogs-region": "${logs_region}",
        "awslogs-stream-prefix": "api"
      }
    }
  }
]
